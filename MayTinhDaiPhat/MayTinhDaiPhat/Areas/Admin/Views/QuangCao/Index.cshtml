@using System.Activities.Expressions
@using PagedList;
@using PagedList.Mvc
@model PagedList.IPagedList<MayTinhDaiPhat.Model.QuangCao>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section masterjs
{

}
<div class="row">
    <div class="col-md-12">
        <div class="padding-bottom-10">
            <a href="/Admin/QuangCao/Create" class="btn btn-primary">Thêm</a>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Danh Mục Sản Phẩm</h2>
                <div class="panel-ctrls">
                    <div class="search-button">
                        <label>
                            @using (Html.BeginForm("Index", "QuangCao", FormMethod.Get))
                            {
                                <input type="text" id="keyword" name="searchString" class="input_search autocomplete ui-autocomplete-input" placeholder="Từ khóa tìm kiếm..." value="@ViewBag.searchString" autocomplete=" off">
                                <button type="submit" class="btn btn-success">Tìm Kiếm</button>
                            }
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-body panel-no-padding">
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tên Quảng Cáo</th>
                            <th>STT</th>
                            <th>Chức Năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr  id="row_@item.MaQC">
                                <td><img src="@item.AnhQC" style="width:50px;height:50px;" /></td>
                                <td>@item.TenQC</td>
                                <td>@item.STT</td>
                                <td width="200px">
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaQC }) |
                      
                                    @Ajax.ActionLink("Xóa", "Delete", new { id = @item.MaQC }, new AjaxOptions()
                                {
                                    Confirm = "Bạn có muốn xóa bản ghi này không",
                                    OnComplete = "$('#row_" + @item.MaQC + "').remove()",
                                    HttpMethod = "Delete"
                                })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))
                <div class="panel-footer"></div>
            </div>
        </div>
    </div>
</div>
